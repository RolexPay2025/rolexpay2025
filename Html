<script>
  let banks = JSON.parse(localStorage.getItem('rolex_banks')) || [];
  let history = JSON.parse(localStorage.getItem('rolex_history')) || [];
  let totalBalance = parseFloat(localStorage.getItem('rolex_balance')) || 0;
  const userId = localStorage.getItem('rolex_userid') || 'RP' + Math.floor(100000 + Math.random() * 900000);
  const userPass = localStorage.getItem('rolex_pass') || '12345678';

  if (!localStorage.getItem('rolex_userid')) {
    localStorage.setItem('rolex_userid', userId);
    localStorage.setItem('rolex_pass', userPass);
  }

  function updateBalance() { document.getElementById('totalBalance').textContent = `₹${totalBalance.toFixed(2)}`; }
  function copyText(text) { navigator.clipboard.writeText(text).then(() => alert(`Copied: ${text}`)); }

  // BANK DEPOSIT CONFIRM FUNCTION
  function confirmDeposit() {
    const amt = prompt("Enter Deposited Amount (min ₹2000):", "2000");
    if (!amt || amt < 2000) return alert("Minimum ₹2000 required!");

    const utr = prompt("Enter UTR Number (from bank):");
    if (!utr) return alert("UTR is required!");

    totalBalance += parseFloat(amt);
    localStorage.setItem('rolex_balance', totalBalance);
    const now = new Date();
    history.unshift({ type: 'bank_deposit', amt, utr, displayTime: now.toLocaleString() });
    localStorage.setItem('rolex_history', JSON.stringify(history));
    updateBalance();
    closeBankDetails();
    alert("Bank Deposit Confirmed! Balance Updated");
  }

  function openBankDetails() { document.getElementById('bankDetailsModal').classList.add('active'); }
  function closeBankDetails() { document.getElementById('bankDetailsModal').classList.remove('active'); }
  function openBankForm() { document.getElementById('bankFormModal').classList.add('active'); }
  function closeBankForm() { document.getElementById('bankFormModal').classList.remove('active'); }

  function addBank() {
    const bankName = document.getElementById('bankName').value;
    const accType = document.getElementById('accType').value;
    const accNumber = document.getElementById('accNumber').value.trim();
    const mobile = document.getElementById('mobileNo').value.trim();
    const accName = document.getElementById('accName').value.trim();
    const upi = document.getElementById('upiId').value.trim();
    const ifsc = document.getElementById('ifscCode').value.trim();
    const atm = document.getElementById('atmCard').value.trim();
    const expiry = document.getElementById('expiryDate').value.trim();
    const cvc = document.getElementById('cvcNo').value.trim();

    if (!bankName || bankName === "Select a Bank" || !accNumber || !accName || !mobile || !upi || !ifsc || !atm || !expiry || !cvc) {
      return alert("All fields are required!");
    }

    banks.push({ bankName, accType, accNumber, mobile, accName, upi, ifsc, atm, expiry, cvc, status: "inactive" });
    localStorage.setItem('rolex_banks', JSON.stringify(banks));
    showBanks();
    closeBankForm();
    alert("Bank Account Added! (Status: Inactive)");
  }

  function showBanks() {
    const list = document.getElementById('bankList');
    const no = document.getElementById('noBanks');
    if (banks.length === 0) { no.style.display = 'block'; list.innerHTML = ''; return; }
    no.style.display = 'none'; list.innerHTML = '';
    banks.forEach((b, i) => {
      list.innerHTML += `<div class="bank-item" onclick="openWithdraw(${i})"><div><div class="bank-name">${b.bankName}</div><div class="bank-acc">${b.accNumber} • ${b.accType}</div></div><div class="status-inactive">Inactive</div></div>`;
    });
  }

  function openWithdraw(index = 0) {
    const modal = document.getElementById('withdrawModal');
    const noMsg = document.getElementById('noBankMsg');
    const detailsBox = document.getElementById('bankDetailsBox');
    if (banks.length === 0) { noMsg.style.display = 'block'; detailsBox.style.display = 'none'; }
    else {
      noMsg.style.display = 'none'; detailsBox.style.display = 'block';
      const b = banks[index];
      document.getElementById('wName').textContent = b.accName;
      document.getElementById('wAcc').textContent = b.accNumber;
      document.getElementById('wIfsc').textContent = b.ifsc;
      document.getElementById('wBank').textContent = `${b.bankName} (${b.accType})`;
    }
    modal.classList.add('active');
  }

  function closeWithdraw() { document.getElementById('withdrawModal').classList.remove('active'); }

  function openProfile() {
    document.getElementById('userId').textContent = userId;
    document.getElementById('userPass').textContent = '••••••••';
    document.getElementById('profileModal').classList.add('active');
  }
  function closeProfile() { document.getElementById('profileModal').classList.remove('active'); }

  function logout() { 
    if (confirm("Logout?")) { 
      localStorage.clear(); 
      alert("Logged out!"); 
      location.reload(); 
    } 
  }

  function showHistory() {
    if (history.length === 0) return alert("No History");
    let msg = "Transaction History:\n\n";
    history.forEach(h => { 
      msg += `${h.type === 'bank_deposit' ? 'Bank Deposit' : 'Deposit'}: ₹${h.amt}\n`; 
      if (h.utr) msg += `UTR: ${h.utr}\n`; 
      msg += `${h.displayTime}\n\n`; 
    });
    alert(msg);
  }

  function openRewards() { alert("Claim your ₹2500 bonus after first deposit!"); }

  function scrollToTop() { window.scrollTo({top:0, behavior:'smooth'}); }

  function openSupport() { 
    window.open("https://t.me/+ubP2eLl_Ic4wMTE1", "_blank"); 
  }

  showBanks(); updateBalance();
</script>

</body>
</html>
